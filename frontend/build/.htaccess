Options -MultiViews
RewriteEngine On

# Routes API vers backend
RewriteRule ^api/(.*)$ https://chatbot-debug-2.preview.emergentagent.com/api/$1 [P,L]

# ðŸš€ PHASE 4 - Routes uploads statiques vers backend
RewriteRule ^uploads/(.*)$ https://chatbot-debug-2.preview.emergentagent.com/uploads/$1 [P,L]

# Route unsubscribe vers backend
RewriteRule ^unsubscribe$ https://chatbot-debug-2.preview.emergentagent.com/unsubscribe [P,L]

# Toutes les autres routes vers React Router
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]